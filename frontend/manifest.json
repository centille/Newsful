{
  "manifest_version": 2,
  "name": "Newsful",
  "description": "Newsful - Trusted and Useful",
  "version": "1.0",
  "permissions": ["activeTab", "tabs", "contextMenus", "windows", "storage"],
  "browser_action": {
    "default_title": "Newsful",
    "default_popup": "./widget.html"
  },
  "background": {
    "scripts": ["./background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["./popup.js", "./widget.js"]
    }
  ]
}
